<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainweixin"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/navpage"
        android:scrollbarThumbVertical="@drawable/scrollbar_handle_vertical" >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:isScrollContainer="true"
            android:orientation="vertical"
            android:paddingBottom="10.0dip" >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="10.0dip"
                android:background="@drawable/shape_bg"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/tests_numbers_linear"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:minHeight="40.0dip"
                    android:orientation="horizontal"
                    android:background="@drawable/comm_shakebg_selected"
                    android:padding="8.0dip"
                    >
                    <ImageView
                        android:id="@+id/tests_numbers_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:src="@drawable/find_more_friend_photograph_icon" />
                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:layout_weight="1.0"
                        android:text="@string/tab_main_tests"
                        android:textColor="@color/black" 
                        android:textSize="@dimen/BasicTextSize"
                        />
                    <TextView
                        android:id="@+id/tests_numbers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10.0dip"
                        android:text="@string/tab_main_tests_sum"
                        android:textColor="@color/black" 
                        android:textSize="@dimen/BasicTextSize"
                        />
                    <ImageView
                        android:layout_width="12.0dip"
                        android:layout_height="12.0dip"
                        android:layout_marginRight="10.0dip"
                        android:src="@drawable/mm_submenu" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="8.0dip"
                android:background="@drawable/shape_bg"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/tests_choose_linear"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:minHeight="40.0dip"
                    android:orientation="horizontal"
                    android:padding="8.0dip"
                    android:background="@drawable/comm_bg_top_selected"
                    >
                    <ImageView
                        android:id="@+id/tests_choose_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:src="@drawable/more_game" />
                    <TextView
                        android:id="@+id/tests_choose_str"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:layout_weight="1.0"
                        android:text="@string/tab_main_tests_choose"
                        android:textColor="@color/black" 
                        android:textSize="@dimen/BasicTextSize"/>
                    <TextView
                        android:id="@+id/tests_choose_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10.0dip"
                        android:text="@string/tab_main_tests_choose_num"
                        android:textColor="@color/black" 
                        android:textSize="@dimen/BasicTextSize"/>
                    <ImageView
                        android:layout_width="12.0dip"
                        android:layout_height="12.0dip"
                        android:layout_marginRight="10.0dip"
                        android:src="@drawable/mm_submenu" />
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@drawable/shape_line" />

                <LinearLayout
                    android:id="@+id/tests_des_linear"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:minHeight="40.0dip"
                    android:orientation="horizontal"
                    android:padding="8.0dip"
                    android:background="@drawable/comm_bg_center_selected"
                    >
                    <TextView
                        android:id="@+id/tests_choose_des"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8.0dip"
                        android:layout_marginRight="8.0dip"
                        android:layout_weight="1.0"
                        android:text="@string/tab_main_tests_desc"
                        android:textColor="@color/black" 
                        android:textSize="@dimen/DescTextSize"
                        android:ellipsize="end"
                        android:lines="5"
                        />
                </LinearLayout>
                 <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@drawable/shape_line" />
                 <LinearLayout
                    android:id="@+id/tests_time_linear"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:minHeight="40.0dip"
                    android:orientation="horizontal"
                    android:padding="8.0dip"
                    android:background="@drawable/comm_bg_bottom_selected"
                    >
                    <TextView
                        android:id="@+id/tests_time"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8.0dip"
                        android:layout_marginRight="8.0dip"
                        android:layout_weight="1.0"
                        android:text="@string/tab_main_tests_time"
                        android:textColor="@color/black" 
                        android:textSize="@dimen/DescTextSize"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="8.0dip"
                android:background="@drawable/shape_bg"
                android:gravity="center_vertical"
                android:orientation="vertical" >
                <LinearLayout
                    android:id="@+id/user_create_linear"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/comm_shakebg_selected"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:minHeight="40.0dip"
                    android:orientation="horizontal"
                    android:padding="8.0dip"
                    >
                    <ImageView
                        android:id="@+id/user_photo_set_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:src="@drawable/find_more_friend_near_icon" />
                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:layout_weight="1.0"
                        android:text="@string/tab_main_tester"
                        android:textColor="@color/black" 
                        android:textSize="@dimen/BasicTextSize"/>
                    <ImageView 
                        android:layout_width="12.0dip"
                        android:layout_height="12.0dip"
                        android:layout_marginRight="10.0dip"
                        android:src="@drawable/mm_submenu" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="8.0dip"
                android:background="@drawable/shape_bg"
                android:gravity="center_vertical"
                android:orientation="vertical" >
                <ImageView
                    android:id="@+id/soft_infor_add"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:minHeight="20.0dip"
                    android:orientation="horizontal"
                    android:padding="2.0dip"
                    android:src="@drawable/add"
                    android:scaleType="fitXY"
                    android:contentDescription="@string/do_testing_add_infor"
                    />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                	android:layout_marginRight="10.0dip"
                	android:layout_marginTop="2.0dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" 
                    >
                <Button
                    android:id="@+id/begin_test_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/delete_user_btn_selected"
                    android:padding="14dip"
                    android:textColor="@android:color/white" 
                    android:text="@string/tab_main_test_now"
                    />
           </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>