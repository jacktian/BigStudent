<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg_noradius" 
    android:gravity="center"
    android:orientation="vertical" >
    
     <LinearLayout
        android:id="@+id/mental_test_linear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/comm_bg_selected"
        android:clickable="true"
        android:gravity="center_vertical"
        android:minHeight="60.0dip"
        android:orientation="horizontal"
        android:padding="10.0dip" >
        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_weight="1.0"
            android:gravity="left"
            android:text="@string/test_choose_per"
            android:textColor="@color/black" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@drawable/shape_line" />
     <LinearLayout
        android:id="@+id/simple_test_linear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/comm_bg_selected"
        android:clickable="true"
        android:gravity="center_vertical"
        android:minHeight="60.0dip"
        android:orientation="horizontal"
        android:padding="10.0dip" >
        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_weight="1.0"
            android:gravity="left"
            android:text="@string/test_choose_simple" 
            android:textColor="@color/black"/>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@drawable/shape_line" />
</LinearLayout>